{% extends 'base.html' %}

{% block title %}Drift #{{ drift.id }} - DriftGuard{% endblock %}

{% block content %}
<style>
    /* Markdown styling for chat messages */
    #chat-messages p {
        margin-bottom: 0.5rem;
    }

    #chat-messages p:last-child {
        margin-bottom: 0;
    }

    #chat-messages strong {
        font-weight: 600;
        color: #fff;
    }

    #chat-messages code {
        background-color: rgba(0, 0, 0, 0.3);
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-family: monospace;
        font-size: 0.875em;
        color: #fbbf24;
    }

    #chat-messages ul,
    #chat-messages ol {
        margin-left: 1.25rem;
        margin-bottom: 0.5rem;
    }

    #chat-messages li {
        margin-bottom: 0.25rem;
    }

    #chat-messages a {
        color: #60a5fa;
        text-decoration: underline;
    }

    #chat-messages a:hover {
        color: #93c5fd;
    }
</style>

<!-- Main Drift Information -->
<div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
        <div>
            <h3 class="text-lg leading-6 font-medium text-white">Drift Details: {{ drift.resource_name }}</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-400">{{ drift.description }}</p>
        </div>
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            {% if drift.severity == 'critical' %}bg-red-100 text-red-800
            {% elif drift.severity == 'high' %}bg-orange-100 text-orange-800
            {% else %}bg-green-100 text-green-800{% endif %}">
            {{ drift.severity|title }}
        </span>
    </div>
    <div class="border-t border-gray-700 px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-700">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Resource Type</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">{{ drift.resource_type }}</dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Cloud Provider</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">{{ drift.cloud_provider }}</dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Expected State</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <pre class="bg-gray-900 p-2 rounded text-xs overflow-x-auto">{{ drift.expected_state }}</pre>
                </dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Actual State</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <pre
                        class="bg-gray-900 p-2 rounded text-xs overflow-x-auto text-red-300">{{ drift.actual_state }}</pre>
                </dd>
            </div>
        </dl>
    </div>
</div>

<!-- Forensic Information: Who Initiated the Change -->
{% if drift.initiated_by_user %}
<div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-white">üë§ Change Initiator</h3>
        <p class="mt-1 text-sm text-gray-400">Information about who made this change</p>
    </div>
    <div class="border-t border-gray-700 px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-700">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Username</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <span class="font-mono bg-gray-900 px-2 py-1 rounded">{{ drift.initiated_by_user }}</span>
                </dd>
            </div>
            {% if drift.initiated_by_email %}
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Email</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <a href="mailto:{{ drift.initiated_by_email }}" class="text-indigo-400 hover:text-indigo-300">
                        {{ drift.initiated_by_email }}
                    </a>
                </dd>
            </div>
            {% endif %}
            {% if drift.initiated_by_role %}
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">IAM Role/User</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <span class="font-mono text-xs bg-gray-900 px-2 py-1 rounded break-all">{{ drift.initiated_by_role
                        }}</span>
                </dd>
            </div>
            {% endif %}
            {% if drift.source_ip %}
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Source IP Address</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <span class="font-mono bg-gray-900 px-2 py-1 rounded">{{ drift.source_ip }}</span>
                </dd>
            </div>
            {% endif %}
            {% if drift.change_method %}
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Change Method</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">
                    <span
                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900 text-blue-200">
                        {{ drift.change_method|upper }}
                    </span>
                </dd>
            </div>
            {% endif %}
        </dl>
    </div>
</div>
{% endif %}

<!-- Timeline -->
{% if drift.change_timestamp %}
<div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-white">‚è±Ô∏è Timeline</h3>
        <p class="mt-1 text-sm text-gray-400">When the change occurred and was detected</p>
    </div>
    <div class="border-t border-gray-700 px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-700">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Change Made</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">{{ drift.change_timestamp }}</dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Drift Detected</dt>
                <dd class="mt-1 text-sm text-white sm:mt-0 sm:col-span-2">{{ drift.detected_at }}</dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-400">Detection Delay</dt>
                <dd class="mt-1 text-sm text-yellow-300 sm:mt-0 sm:col-span-2">
                    ~15 minutes (Change ‚Üí Detection)
                </dd>
            </div>
        </dl>
    </div>
</div>
{% endif %}

<!-- API Calls -->
<input type="hidden" name="action" value="revert">
<button type="submit"
    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
    Revert Changes
</button>
</form>
<form method="POST" action="{% url 'drifts:remediate' drift.id %}">
    {% csrf_token %}
    <input type="hidden" name="action" value="codify">
    <button type="submit"
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Codify Drift
    </button>
</form>
</div>

<!-- Gemini Chatbot Widget -->
<div class="fixed bottom-4 right-4 w-96 bg-gray-800 border border-gray-700 shadow-xl rounded-lg overflow-hidden z-50"
    id="chatbot-widget">
    <div class="bg-gray-700 px-4 py-3 border-b border-gray-600 flex justify-between items-center cursor-pointer"
        onclick="document.getElementById('chat-content').classList.toggle('hidden')">
        <h3 class="text-sm font-medium text-white flex items-center">
            <svg class="h-5 w-5 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            DriftGuard AI Assistant
        </h3>
        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
    </div>
    <div id="chat-content" class="h-80 flex flex-col">
        <div class="flex-1 p-4 overflow-y-auto space-y-4" id="chat-messages">
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-indigo-600 rounded-full p-1">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div class="ml-3 bg-gray-700 p-3 rounded-lg text-sm text-gray-200">
                    Hello! I'm analyzing this drift event. How can I help you resolve it?
                </div>
            </div>
        </div>
        <div class="border-t border-gray-600 p-3">
            <form hx-post="{% url 'chat:message' %}" hx-target="#chat-messages" hx-swap="beforeend"
                hx-on::after-request="this.reset()">
                {% csrf_token %}
                <input type="hidden" name="drift_id" value="{{ drift.id }}">
                <div class="flex space-x-2">
                    <input type="text" name="message"
                        class="flex-1 bg-gray-900 border border-gray-600 rounded-md px-3 py-2 text-sm text-white focus:outline-none focus:border-indigo-500"
                        placeholder="Ask Gemini...">
                    <button type="submit"
                        class="bg-indigo-600 text-white px-3 py-2 rounded-md text-sm hover:bg-indigo-700">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}